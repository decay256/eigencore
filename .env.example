# App
APP_NAME=Eigencore
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://eigencore:eigencore@localhost:5432/eigencore

# JWT Secret (generate a strong one for production!)
SECRET_KEY=your-secret-key-here

# OAuth - Discord (https://discord.com/developers/applications)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/auth/discord/callback

# OAuth - Google (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# OAuth - Steam (https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=
STEAM_REDIRECT_URI=http://localhost:8000/auth/steam/callback

# Email / SMTP (for verification and password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Base URL for email links (your frontend URL)
BASE_URL=http://localhost:8080
